requests = [14, 20, 29, 40, 50, 110]
head = 29

requests.sort()

left = [r for r in requests if r < head]
right = [r for r in requests if r > head]

seek_sequence = [head]
total_seek = 0
current = head

for track in sorted(left, reverse=True):
    total_seek += abs(current - track)
    current = track
    seek_sequence.append(track)

for track in sorted(right, reverse=True):
    total_seek += abs(current - track)
    current = track
    seek_sequence.append(track)

print("Seek Sequence:", seek_sequence)
print("Total Seek Time:", total_seek)
